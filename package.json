{
  "name": "airtable-local",
  "version": "1.0.0",
  "description": "Local development environment for Airtable Scripts with TypeScript",
  "main": "dist/script.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "esbuild src/index.ts --bundle --outfile=dist/script.js --format=iife --target=es2020",
    "watch": "esbuild src/index.ts --bundle --outfile=dist/script.js --format=iife --target=es2020 --watch",
    "local": "npx ts-node src/local.ts",
    "local:watch": "npx ts-node-dev --respawn src/local.ts"
  },
  "keywords": [
    "airtable",
    "scripts",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/airtable": "^0.10.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.8",
    "esbuild": "^0.27.2",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "airtable": "^0.12.2",
    "dotenv": "^17.2.3"
  }
}
